@page "/overview"

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-5 text-light fw-bold">🎧 Playlist Overview</h1>
        <p class="lead text-muted">Entdecke Statistiken und Analysen zur meistgestreamten Musik!</p>
    </div>

    <!-- Statistiken als Platzhalter -->
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm bg-dark text-light rounded-3 mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">Gesamtstreams</h5>
                    <p class="card-text display-6">3,500,000</p> <!-- Beispielwert -->
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm bg-dark text-light rounded-3 mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">Durchschnittliches Ranking</h5>
                    <p class="card-text display-6">25</p> <!-- Beispielwert -->
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm bg-dark text-light rounded-3 mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">Top Künstler</h5>
                    <p class="card-text display-6">Artist Name</p> <!-- Beispielwert -->
                </div>
            </div>
        </div>
    </div>
</div>
